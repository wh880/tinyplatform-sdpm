                $("input[name=bugDuplicateBug],input[name=bugDuplicateBug-name]").attr("ignore","ignore");
                $("input[name=bugDuplicateBug],input[name=bugDuplicateBug]").val("").trigger("change");
                idBox.hide();
            }
        });

    });
