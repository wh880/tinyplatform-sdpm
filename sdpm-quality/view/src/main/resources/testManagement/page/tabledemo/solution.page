                idBox.show();
                $("input[name=bugDuplicateBug],input[name=bugDuplicateBug-name]").attr("ignore","");
                $(function() {
                    ajaxRead("${sid}", "storyChildStories", "storyId", "storyTitle", "/product/story/storyList?productId=${cookieProductId}&storyId=${story?.storyId}");
