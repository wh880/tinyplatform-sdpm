<script type="text/javascript">
    $(function () {
        $("input[data-targetgroup]").click(function () {
            var check = "uncheck";
            var gid = $(this).attr("data-targetgroup");
            if (this.checked) {
                check = "check";
            }
            $("input[data-group=" + gid + "]").iCheck(check);
        })
    })
</script>
