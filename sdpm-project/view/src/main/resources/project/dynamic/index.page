#!set(activeTitle="项目管理",activeMenuId=currentPageId)
#import("/org/tinygroup/dropDown/components/dropDown.component")
#set(name="dynamic")
#@div()
    #@tabWithInit("tab_demo" "optionsBox")
        #@div(divClass="dropdownBox")
            #include("/project/dropdownMenu.page")
        #end
        #@tabHead()
            #include("/project/protab.page")
        #end
        #@tabBodyCol("ptop-5")
            #@div(divClass="operationbar")
            <span class="f">
                <a val="1" class="selDate ${selDate==" 1"?"active_btn":""}">今天</a>
                <a val="2" class="selDate ${selDate==" 2"?"active_btn":""}">昨天</a>
                <a val="3" class="selDate ${selDate==" 3"?"active_btn":""}">前天</a>
                <a val="4" class="selDate ${selDate==" 4"?"active_btn":""}">本周</a>
                <a val="5" class="selDate ${selDate==" 5"?"active_btn":""}">上周</a>
                <a val="6" class="selDate ${selDate==" 6"?"active_btn":""}">本月</a>
                <a val="7" class="selDate ${selDate==" 7"?"active_btn":""}">上月</a>
                <a val="0" class="selDate ${selDate==" 0"?"active_btn":""}">所有</a>
                <div class="btn-group btnDropDown">
                    <a id="dLabel" data-target="#" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">
                        用户
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dLabel">
                        #foreach(team : teamList )
                            #if(var != 0)
                                <li><a class="selUser" val="${team.teamAccount}">${team.teamAccount}</a></li>
                            #end
                        #end
                    </ul>
                </div>
            </span>
                #div(divClass="clearfix")#end
        #end
    #end
#end
<script>
    $(function () {
        var actionUrl = $("#dynamicTable").attr("data-url");
        $(".selDate").click(function (e) {
            $("#dynamicTable").attr("data-url", actionUrl + "?selDate=" + $(this).attr("val"));
            $("#dynamicTable").trigger("refresh");
        });

        $(".selUser").click(function (e) {
            $("#dynamicTable").attr("data-url", actionUrl + "?teamAccount=" + $(this).attr("val"));
            $("#dynamicTable").trigger("refresh");
        });
    });
</script>
#include("/project/dynamic/table.page")