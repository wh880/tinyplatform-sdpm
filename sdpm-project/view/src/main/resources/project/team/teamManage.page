<script>
    //保存前对工日/工时数字检查
    function checkNum()
    {
        var isNumber=true;
        $("input[name$='teamDays']").each(function()
        {
            if(isNaN($(this).val())||parseFloat($(this).val())<0)
            {
                isNumber=false;
                return;
            }
        });
        $("input[name$='teamHours']").each(function()
        {
            if(isNaN($(this).val())||parseFloat($(this).val())<0)
            {
                isNumber=false;
                return;
            }
        });
        if(!isNumber)
        {
            alert("工日/工时请输入数字！");
        }
        return isNumber;
    }
</script>