<script type="text/javascript">
    $(function () {
        $("input[name=docType]").on("change", function () {
            var type = $(this).val();
            switch (type) {
                case "1":
                    $('#urlBox').hide();
                    $('#fileBox').show();
                    $('#contentBox').hide();
                    break;
                case "2":
                    $('#urlBox').show();
                    $('#fileBox').hide();
                    $('#contentBox').hide();
                    break;
                case "3":
                    $('#urlBox').hide();
                    $('#fileBox').hide();
                    $('#contentBox').show();
                    break;
            }
        });
    });
</script>
