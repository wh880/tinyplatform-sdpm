            var estimate = $("input[name='taskEstimate']").val();
            if (!estimate || estimate <= "0.01") {
                layer.confirm("消耗为0，是否标记任务为完成？", function () {
                    layer.closeAll();
                    $(e).attr("action", "${TINY_CONTEXT_PATH+adminPath}/project/task/finishsave");
                })

            }
            //return false;
        }
    });
</script>
