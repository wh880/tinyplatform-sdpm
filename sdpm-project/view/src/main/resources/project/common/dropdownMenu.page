<script type="text/javascript">
    $(function () {
        $("#sleProject-select").on("change", function (e) {
            var projectId = $.trim($(this).val());
            if (!projectId){
                layer.msg("请选择项目");
                return false;
            }
            $.cookie("currentProjectId",projectId,{path:"/",expires：365});
            window.location.reload();
        });
    });
</script>