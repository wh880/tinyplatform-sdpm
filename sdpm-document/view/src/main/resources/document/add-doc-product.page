<script type="text/javascript">
/* Set doc type. */
function setType(type)
{
	if(type == '链接')
	{
		$('#urlBox').removeClass('hidden');
		$('#fileBox').addClass('hidden');
		$('#contentBox').addClass('hidden');
	}
	else if(type == '网页')
	{
		$('#urlBox').addClass('hidden');
		$('#fileBox').addClass('hidden');
		$('#contentBox').removeClass('hidden');
	}
	else
	{
		$('#urlBox').addClass('hidden');
		$('#fileBox').removeClass('hidden');
		$('#contentBox').addClass('hidden');
	}
}
</script>