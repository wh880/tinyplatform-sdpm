<script type="text/javascript">
    /* Set doc type. */
    $(function () {
        $("[name=docType]").each(function(){
            $(this).on("change",function(){
                var type=$(this).val();
                if (type == '2') {
                    $('#urlBox').show();
                    $('#fileBox').hide();
                    $('#contentBox').hide();
                }
                else if (type == '3') {
                    $('#urlBox').hide();
                    $('#fileBox').hide();
                    $('#contentBox').show();
                }
                else {
                    $('#urlBox').hide();
                    $('#fileBox').show();
                    $('#contentBox').hide();
                }
            });
            if(this.checked){
                $(this).trigger("change");
            }
        })
    });
</script>
