<script>
    $(document).ready(function () {

        $("#story_reviewed").on("click", function () {

            var vm = this.checked;
            if (vm == true) {
                $("[name='storyReviewedBy']").attr("disabled", "disabled");
                $("[name='storyReviewedBy']").closest(".formControls").next("div[class=col-2]").hide();
            }
            if (vm == false) {
                $("[name='storyReviewedBy']").removeAttr("disabled");
                $("[name='storyReviewedBy']").closest(".formControls").next("div[class=col-2]").show();
            }


        });
    });
</script>



