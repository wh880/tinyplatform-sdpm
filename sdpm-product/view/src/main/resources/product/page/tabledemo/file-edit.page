#@tinyForm("thisform" TINY_CONTEXT_PATH+adminPath+"/system/profile/edit/story" "post" {"class":"edit"})
<input type="hidden" name="fileId" value="${profile?.fileId}">
    #@colLabel()#end
<div class="col-9">
    #@div(divClass="col-7")

        #tinyInput("text" "fileTitle" profile?.fileTitle {"datetype":"*","style":"height:30px","placeholder":"附件名称","class":"input-text"})

    #end
    <div class="col-2">
        .${profile?.fileExtension}
    </div>
    <div class="col-3">
        <button style="float: right" type="submit" id="submit" class="commitBtn">保存</button>
    </div>
</div>
#end
<script>
    $(function(){
        $("form[name=thisform]").on("submit",function(){
            $.ajax({
                url:$(this).attr("action"),
                type:"post",
                dataType:"json",
                data:{fileTitle:$("input[name=fileTitle]").val(),fileId:${profile?.fileId}},
            success:function(data){
                if(data.status=="y"){
                    window.location.reload()
                }else{
                    layer.msg(data.info);
                }

            },
            error:function(){
                layer.msg("error");
            }
        });
        return false;
    })
    })
</script>