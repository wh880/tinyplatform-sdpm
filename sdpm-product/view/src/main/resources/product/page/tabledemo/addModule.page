<script type="text/javascript">
    $(function () {
        $("form[name=moduleForm]").Validform({
            tiptype: 2
        });
        $("form[name=moduleForm]").on("submit",function(){
            $.ajax({
                url:$(this).attr("action"),
                data:$(this).serialize(),
                type:"POST",
                success:function(data){
                    if(data.status=="success"){
                        window.location.reload();
                    }
                }
            });
            return false;
        });
    });
</script>
