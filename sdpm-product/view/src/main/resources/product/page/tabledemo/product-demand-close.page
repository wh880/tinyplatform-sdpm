<script>
	$(document).ready(function(){
	
		$("#subdivision").hide();
		$("#repeat").hide();
		
		$("select[name='demand-close-cause']").on("change",function(){
			var subdivision = $("#subdivision");
			var repeat = $("#repeat");
			if($(this).val()=='subdivision'){
				repeat.hide();
				subdivision.show();
			}else if($(this).val()=='repeat'){
				subdivision.hide();
				repeat.show();
			}else{
				subdivision.hide();
				repeat.hide();
			}
			
			
			
		});
	
	});
</script>

